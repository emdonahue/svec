#!/bin/zsh


case $1 in

    scale) #Scale all elements by a constant
	#<constant> <vector>
	echo "scaling"
	;;
    help) #Print the list of subcommands or help information for a specific subcommand
	#[subcommand]
	[[ -z "$2" ]] && echo 'usage: svec <subcommand> [arguments]'
	grep -A "${+2}" "$2)\s#" "$0" | sed -nE -e 's/\s*(\w+)\)\s#(.+)$/\1 - \2/p' -e "s/^\s*#(.+)/usage: $2 \1/p"
	;;
    *)
	"$0" help
	;;
esac
